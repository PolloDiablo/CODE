<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/canada_colour</item>
        <item name="android:listViewStyle">@style/ListViewStyle</item>
    </style>

    <style name="TextViewStyle" parent="android:style/Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/text_list_colour</item>
    </style>

    <style name="ListViewStyle" parent="android:style/Widget.ListView">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/bg_list_colour</item>
        <item name="android:textColorPrimary">@color/text_list_colour</item>
    </style>

    <color name="bg_list_colour">#fe54834f</color>
    <color name="text_list_colour">#FF000000</color>
    <color name="canada_colour">#FFB43939</color>

</resources>
